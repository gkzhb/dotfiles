{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "allow",
      "git push": "deny",
      "git status*": "allow",
      "git diff*": "allow",
      "git commit*": "allow",
      "ls*": "allow",
      "pwd": "allow",
      "cat*": "allow",
      "edit": "allow",
      "patch": "allow",
      "write": "allow",
    },
  },
  "mcp": {
    "chrome-devtools": {
      "enabled": true,
      "type": "local",
      "command": [
        "pnpx",
        "chrome-devtools-mcp@latest",
        "--browser-url=http://127.0.0.1:9222",
      ],
    },
  },
}
