{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["oh-my-opencode"],
  "disabled_providers": ["openrouter", "opencode"],
  "provider": {
    "volcengine": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "volc",
      "options": {
        "baseURL": "https://ark.cn-beijing.volces.com/api/v3",
        "apiKey": "{env:VOLCENGINE_API_KEY}",
        "compatibility": "strict",
        "includeUsage": true,
      },
      "models": {
        "kimi-k2-250905": {
          "name": "Kimi K2",
          "tool_call": true,
          "limit": {
            "context": 256000,
            "output": 32000,
          },
          "cost": {
            "input": 4,
            "output": 16,
            "cache_read": 0.8,
          },
        },
        "kimi-k2-thinking-251104": {
          "name": "Kimi K2 Thinking",
          "tool_call": true,
          "limit": {
            "context": 256000,
            "output": 32000,
          },
          "cost": {
            "input": 4,
            "output": 16,
            "cache_read": 0.8,
          },
        },
        "glm-4-7-251222": {
          "name": "GLM 4.7",
          "tool_call": true,
          "limit": {
            "context": 200000,
            "output": 100000,
          },
          "cost": {
            "input": 4,
            "output": 16,
            "cache_read": 0.8,
          },
          "variants": {
            "thinking": {
              "thinking": { "type": "enabled" },
            },
            "chat": {
              "thinking": { "type": "disabled" },
            },
          },
        },
        "deepseek-v3-2-251201": {
          "name": "DS V3.2",
          "reasoning": true,
          "tool_call": true,
          "limit": {
            "context": 128000,
            "output": 32000,
          },
          "cost": {
            "input": 4,
            "output": 12,
            "cache_read": 0.8,
          },
          "variants": {
            "thinking": {
              "thinking": { "type": "enabled" },
            },
            "chat": {
              "thinking": { "type": "disabled" },
            },
          },
        },
      },
    },
    "minimax": {
      "npm": "@ai-sdk/anthropic",
      "options": {
        "baseURL": "https://api.minimaxi.com/anthropic/v1",
        "apiKey": "{env:MINIMAX_API_KEY}",
      },
      "models": {
        "MiniMax-M2.1": {
          "name": "MiniMax M2.1",
        },
      },
    },
    "nvidia": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "https://integrate.api.nvidia.com/v1",
        "apiKey": "{env:NVIDIA_NIM_API_KEY}",
      },
      "models": {
        "minimaxai/minimax-m2": {
          "name": "MiniMax M2",
        },
      },
    },
  },
  "model": "volcengine/kimi-k2-250905",
  "small_model": "volcengine/kimi-k2-250905",
  "permission": {
    "edit": "ask",
    "bash": "ask",
  },
  // include memory from other agent files
  "instructions": ["CLAUDE.md"],
  "tools": {
    "webfetch": false,
    // disable string replace tool but preserve other file edit tools
    "edit": false,
    // "multiedit": true,
    "patch": true,
    "write": true,
  },
  "mcp": {
    "chrome-devtools": {
      "enabled": false,
      "type": "local",
      "command": [
        "pnpx",
        "chrome-devtools-mcp@latest",
        "--browser-url=http://127.0.0.1:9222",
      ],
    },
    // "coding": {
    //   "type": "local",
    //   "command": ["uvx", "minimax-coding-plan-mcp"],
    //   "environment": {
    //     "MINIMAX_API_HOST": "https://api.minimaxi.com",
    //   },
    // },
  },
  "agent": {
    // set default primary agent tools
    "build": {
      "tools": {},
    },
    "plan": {
      "tools": {},
    },
  },
  "share": "disabled",
  "keybinds": {
    "leader": "ctrl+x",
    "app_exit": "ctrl+c,<leader>q",
    "editor_open": "<leader>e",
    "theme_list": "<leader>t",
    "sidebar_toggle": "<leader>s",
    "status_view": "<leader>i",
    "session_export": "<leader>p",
    "session_new": "<leader>n",
    "session_list": "<leader>l",
    "session_timeline": "<leader>g",
    "session_share": "none",
    "session_unshare": "none",
    // stop session like in emacs
    "session_interrupt": "escape,ctrl+g",
    "session_compact": "<leader>c",
    "session_child_cycle": "ctrl+right",
    "session_child_cycle_reverse": "ctrl+left",
    "messages_page_up": "pageup",
    "messages_page_down": "pagedown",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+s", // if using ctrl+d will trigger permission reject
    "messages_first": "home",
    "messages_last": "end",
    "messages_copy": "<leader>y",
    "messages_undo": "<leader>u",
    "messages_redo": "<leader>r",
    "messages_toggle_conceal": "<leader>h",
    "model_list": "<leader>m",
    "model_cycle_recent": "f2",
    "model_cycle_recent_reverse": "shift+f2",
    "command_list": "ctrl+p",
    "agent_list": "<leader>a",
    "agent_cycle": "tab",
    "agent_cycle_reverse": "shift+tab",
    "input_clear": "ctrl+c",
    // "input_forward_delete": "none",
    "input_paste": "ctrl+v",
    "input_submit": "enter",
    "input_newline": "shift+enter,ctrl+j",
    "history_previous": "up",
    "history_next": "down",
    // "variant_cycle": "ctrl+t",
  },
  "autoupdate": false,
}
