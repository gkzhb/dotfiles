{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-skills-gkzhb"
  ],
  "provider": {
    "myprovider": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "volc",
      "options": {
        "baseURL": "https://ark.cn-beijing.volces.com/api/v3",
        "apiKey": "{env:VOLCENGINE_API_KEY}",
        "compatibility": "strict",
        "includeUsage": true,
      },
      "models": {
        "kimi-k2-250905": {
          "name": "Kimi K2",
          "tool_call": true,
          "limit": {
            "context": 256000,
            "output": 32000,
          },
          "cost": {
            "input": 4,
            "output": 16,
            "cache_read": 0.8,
          },
        },
        "deepseek-v3-1-250821": {
          "name": "DS V3.1",
          "reasoning": true,
          "tool_call": true,
          "limit": {
            "context": 128000,
            "output": 32000,
          },
          "cost": {
            "input": 4,
            "output": 12,
            "cache_read": 0.8,
          },
        },
        "deepseek-r1-250528": {
          "name": "DS R1",
          "reasoning": true,
          "tool_call": true,
          "limit": {
            "context": 128000,
            "output": 32000,
          },
          "cost": {
            "input": 4,
            "output": 16,
            "cache_read": 0.8,
          },
        },
      },
    },
  },
  "permission": {
    "edit": "ask",
    "bash": "ask",
  },
  // include memory from other agent files
  "instructions": ["CLAUDE.md"],
  "mcp": {
    "web-search": {
      "type": "remote",
      "url": "{file:~/.secrets/mcp-search-url.txt}",
      "enabled": true,
    },
    "web-fetch": {
      "type": "remote",
      "url": "{file:~/.secrets/mcp-fetch-url.txt}",
      "enabled": false,
    },
    "pdf-reader": {
      "type": "local",
      "command": ["pnpx", "@gkzhb/pdf-reader-mcp"],
    },
    // TODO mcps cause opencode stuck before generating prompt
    "web-browser": {
      "type": "remote",
      "url": "http://localhost:12306/mcp",
      "enabled": true
    },
    // "figma": {
    //   "type": "remote",
    //   "url": "http://localhost:8612/sse",
    //   "enabled": true
    // }
  },
  "share": "disabled",
  "keybinds": {
    "app_help": "<leader>/",
    // scroll page like in vim
    "messages_page_up": "ctrl+b",
    "messages_page_down": "ctrl+r", // ctrl+f not working
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_first": "<leader>h",
    "messages_last": "<leader>g",
    // stop session like in emacs
    "session_interrupt": "esc,ctrl+g",
  },
  "autoupdate": false,
}
