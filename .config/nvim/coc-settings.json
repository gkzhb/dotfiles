{
  "snippets.ultisnips.pythonPrompt": true,
  "languageserver": {
    "thrift": {
      "command": "thrift-ls",
      "filetypes": ["thrift"],
      "rootPatterns": [".git", "package.json", "thrift.config.js"],
      "initializationOptions": {},
      "settings": {}
    },
    "nix": {
      "command": "nil",
      "filetypes": ["nix"],
      "rootPatterns":  ["flake.nix"],
      "settings": {
        "nil": {
          "formatting": { "command": ["nixfmt"] }
        }
      }
    }
  }
}
